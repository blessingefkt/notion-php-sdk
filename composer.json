{
    "name": "blessingefkt/notion-sdk-php",
    "description": "Notion PHP SDK",
    "type": "library",
    "keywords": [
        "sayla",
        "Codecycler",
        "Notion"
    ],
    "homepage": "https://github.com/blessingefkt/notion",
    "license": "MIT",
    "authors": [
        {
            "name": "Blessing R",
            "email": "blessing@sayla.co",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "illuminate/support": "^6.0|^7.0|^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.10",
        "vimeo/psalm": "^4.3"
    },
    "autoload": {
        "psr-0": {
            "Notion": "src/"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    }
}
